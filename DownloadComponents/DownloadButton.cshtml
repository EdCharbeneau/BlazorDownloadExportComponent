@using Microsoft.AspNetCore.Blazor;

<a href="@dataUri()" role="button" onclick="@OnClicked" class="ec-btn ec-btn-download" download="@FileName">@ChildContent</a>

@functions {
    const string DEFAULT_MEDIA_TYPE = "text/plain;charset=utf-8";
    string dataUri() => $"data:{MediaType},{Payload}";

    private void OnClicked(UIMouseEventArgs e)
    {
        MsSaveBlobInterop.MsSaveBlob(Payload, FileName);
    }

    // Content output between <a> child content </a>
    public RenderFragment ChildContent { get; set; }

    // Component Properties

    /// <summary>
    /// A media type (also MIME type and content type) is a two-part identifier for file formats and format contents transmitted on the Internet.
    /// </summary>
    /// <value>
    /// Gets or Sets the media type. Default value = "text/csv"
    /// </value>
    public string MediaType { get; set; } = DEFAULT_MEDIA_TYPE;

    /// <summary>
    /// Gets or Sets the data to be downloaded by the client.
    /// </summary>
    public string Payload { get; set; }

    /// <summary>
    /// Gets or Sets the specified file name.
    /// </summary>
    public string FileName { get; set; }
}